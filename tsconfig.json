{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "outDir": "./build",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@routes/*": ["src/routes/*"],
      "@hooks/*": ["src/hooks/*"],
      "@svg/*": ["src/svg/*"],
      "@components/*": ["src/components/*"],
      "@providers/*": ["src/providers/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@styledComponents/*": ["src/styledComponents/*"],
      "@scss/*": ["src/scss/*"],
      "@img/*": ["public/img/*"],
      "@fonts/*": ["public/fonts/*"]
    },
    "target": "es5",
    "declaration": false,
    "lib": [
      "es2019",
      "dom",
      "ES2020.Promise"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "esnext",
    "jsx": "react",
    "typeRoots": ["../../node_modules/@types"]
  },
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/**/*"]
  },
  "exclude": [
    "./public",
    "./build",
    "./.vscode",
    "**/*.test.tsx",
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest"
  ],
  "include": ["<rootDir>/src/__test__/test-setup.js", "./src/**/**/*"]
}
