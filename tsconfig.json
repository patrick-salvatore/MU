{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "outDir": "./build",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@routes/*": ["src/routes/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@providers/*": ["src/providers/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@styledComponents/*": ["src/styledComponents/*"],
      "@scss/*": ["src/scss/*"],
      "@img/*": ["public/img/*"],
      "@fonts/*": ["public/fonts/*"],
    },
    "target": "es5",
    "declaration": false,
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "jsx": "react",
    "typeRoots": ["../../node_modules/@types"],
  },
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": ["./src/**/**/*",]
  },
  "exclude": [
    "./public",
    "./build",
    "./.vscode",
    "**/*.test.tsx",
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
  ],
  "include": [
    "<rootDir>/src/__test__/test-setup.js",
    "./src/**/**/*",
  ]
}